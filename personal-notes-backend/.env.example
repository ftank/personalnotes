# Server Configuration
PORT=3000
NODE_ENV=development

# Database (Supabase PostgreSQL)
DATABASE_URL=postgresql://user:password@host:5432/database

# Firebase Admin SDK
# Download the service account JSON from Firebase Console
# and paste the entire JSON content as a single line here
FIREBASE_ADMIN_SDK={"type":"service_account","project_id":"..."}

# Claude API
CLAUDE_API_KEY=sk-ant-api03-...

# Encryption
ENCRYPTION_MASTER_KEY=generate_a_secure_32_byte_key_here
ANALYTICS_SALT=generate_a_random_salt_here

# Redis (for caching and queues)
REDIS_URL=redis://localhost:6379

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
